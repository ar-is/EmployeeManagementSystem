@model JobSkillViewModel

@{
    ViewData["Title"] = "Skills";
}

<h1>Skills</h1>

<form asp-controller="Home" asp-action="Skills">
    <select name="jobId" id="searchJob"
            @*asp-for="JobId"
            asp-items="@(new SelectList(Model.Jobs, "Id", "Title"))"*@>
        <option>Please select a job</option>
    </select>

    <button id="jobId" type="submit" value="Submit">Submit</button>
</form>

<table id="skills" class="table table-responsive">
    <thead>
        <tr>
            <th>NAME</th>
            <th>TYPE</th>
            <th>DESCRIPTION</th>
            <th>CREATION DATE</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section Scripts {
    <script src="~/js/app/services/jobService.js"></script>
    <script src="~/js/app/services/skillService.js"></script>
    <script src="~/js/app/controllers/skillsController.js"></script>
    <script>
        $(document).ready(function () {
            var jobId = '@Model.JobId';

            SkillsController.jobsInit("#searchJob", jobId);
            SkillsController.skillsForJobInit("#skills", jobId);

            $("#jobId").css('display', 'none');

            $("#searchJob").change(function () {
                $("#jobId").click();
            });
        });
    </script>
}
